<tr class="post-row" id="<%= dom_id(post) %>">
  <td class="<%= platform_background(post) %>"><%= post.platform.name if post.platform %></td>
  <td><%= post_time_format(post.posted_on) if post.posted_on %></td>
  <td class="content"><%= post.content %></td>
  <td class="<%= count_background(post.content.length) %>"><%= post.content.length %></td>
  <td><%= link_to post.url, post.url, target: '_blank' unless post.url.blank? %></td>
  <td><%= post_day_format(post.posted_on) if post.posted_on %></td>
  <td class="<%= post.status %>"><%= post.status %></td>
  <% if controller_name == "topics" then %>
  <td><%= link_to "Edit", edit_post_path(post) %></td>
  <td><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></td>
  <% else %>
  <td><%= link_to "view topic", topic_path(post.topic) %></td>
  <% end %>
</tr>