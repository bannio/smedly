<%= form_for post do |f| %>

  <%= f.hidden_field :topic_id %>
  <%#= f.label :platform %>
  <%= f.collection_radio_buttons(:platform_id, Platform.all, :id, :name) %>
  <%#= f.collection_select(:platform_id, Platform.all, :id, :name) %><br>
  <%#= f.label :content %>
  <%= f.text_area :content, cols: 50, rows: 5, placeholder: "message here" %><br>
  <%= f.label :url, "http://" %>
  <%= f.text_field :url, size: 50 %><br>
  <%= f.label :posted_on, "Scheduled for:" %>
  <%#= f.date_field :posted_on, class: "date_picker" %>
  <%= f.datetime_select :posted_on, default: post_date_default %><br>
  <%= f.select(:status, Post.statuses.keys.map {|status| [status.titleize,status]}) %><br>
  <%= f.submit class: "button" %>
  <%= post.content.length if post.content %>
  <% end %>