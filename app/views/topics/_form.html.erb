<%= form_for @topic do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  <%= f.label :summary %>:
  <%= f.text_area :summary %><br>
  <%= f.label :publish_date %>:
  <%= f.date_field :publish_date, class: "date_picker" %><br>
  <%= f.submit %>
<% end %>
  <% if action_name == 'edit' %>
    <%= button_to "Cancel", topic_path(@topic), method: :get %>
  <% else %>
    <%= button_to "Cancel", topics_path, method: :get %>
  <% end %>