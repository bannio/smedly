<%= form_for @topic do |f| %>
  <%#= f.label :name %>
  <%= f.text_field :name, placeholder: "Name ..." %><br>
  <%#= f.label :summary %>
  <%= f.text_area :summary, cols: 50, rows: 5, placeholder: "Notes and or summary ..." %><br>
  <%= f.label :publish_date %>:
  <%= f.date_field :publish_date, class: "date_picker" %><br>
  <%= f.text_field :author, placeholder: "Author ..." %><br>
  <%= f.text_field :url, placeholder: "url ..." %><br>
  <%= f.submit %>
<% end %>
  <% if action_name == 'edit' %>
    <%= button_to "Cancel", topic_path(@topic), method: :get %>
  <% else %>
    <%= button_to "Cancel", topics_path, method: :get %>
  <% end %>