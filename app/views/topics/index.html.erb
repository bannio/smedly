<h1>Topics</h1>

<%= button_to "New", new_topic_path, method: :get, class: "button" %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr class="topic-row" id="<%= dom_id(topic) %>">
      <td><%= topic.publish_date %></td>
      <td class="name"><%= topic.name %></td>
      <td><%= topic.status %></td>
      <td><%= link_to 'view', topic_path(topic) %></td>
    </tr>
  <% end %>
  </tbody>
</table>