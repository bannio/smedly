<h1><%= @handle.name %></h1>
<fieldset>
<legend>Edit details</legend>
<%= render 'form' %>
</fieldset>
<br>

<%= link_to "Handle list", handles_path, class: "button" %>

<%= link_to "View Twitter Profile", "https://twitter.com/#{@handle.name}", target: '_blank', class: "button" %>


<table id="posts-table">
  <tbody id="post-table-body">
    <%= render @handle.posts.includes(:platform).order(:platform_id, :posted_on) %>
  </tbody>
</table>